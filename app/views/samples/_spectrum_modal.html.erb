<div class="flex items-center">
  <div id="thumbnail-modal" tabindex="-1" class="flex hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full h-full bg-gray-500 bg-opacity-75 md:inset-0" data-modal-target="modal">
    <div class="relative m-10 w-full max-w-screen-xl h-auto shadow-2xl">
      <!-- Modal content -->
      <div class="relative bg-white rounded-lg shadow">
        <!-- Modal header -->
        <div class="flex justify-between items-center p-5 rounded-t border-b">
          <h3 class="text-xl font-medium text-gray-900">
            <%= spectrum.file.filename %>
          </h3>
          <button type="button" class="inline-flex items-center p-1.5 ml-auto text-sm text-gray-400 bg-transparent rounded-lg hover:text-gray-900 hover:bg-gray-200" data-modal-toggle="thumbnail-modal" data-action="click->modal#toggle">
            <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
            <span class="sr-only">Close modal</span>
          </button>
        </div>
        <div class="overflow-auto p-6 space-y-2 max-h-1/2">
          <% if spectrum.file.attached? && spectrum.file.persisted? %>
            <%= tag.canvas id: "canvas-#{spectrum.id}" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
