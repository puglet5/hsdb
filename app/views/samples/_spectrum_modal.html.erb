<div class="flex items-center">
  <div tabindex="-1" class="fixed top-0 left-0 right-0 z-50 flex items-center justify-center w-full h-full overflow-x-hidden overflow-y-auto bg-gray-500 bg-opacity-75 md:inset-0" data-modal-target="modal">
    <div class="relative w-full h-auto max-w-screen-xl m-10 shadow-2xl">
      <!-- Modal content -->
      <div class="relative bg-white rounded-md shadow">
        <!-- Modal header -->
        <div class="flex items-center justify-between p-5 border-b rounded-t">
          <h3 class="text-xl font-medium text-gray-700">
            <%= spectrum.sample.title %>
          </h3>
          <div class="relative flex">
            <%= render TooltipComponent.new(tooltip: "Low pass filter", user: current_user) do %>
              <input id="default-range" type="range" value="0" max="10" min="0" step="1" class="mr-6 my-auto w-16 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer text-gray-500" data-action="input->chart#applySmoothing" data-chart-target="smoothingRadiusSlider">
            <% end %>

            <%= render TooltipComponent.new(tooltip: "Reverse X axis", user: current_user) do %>
              <button type="button" class="flex items-center ml-auto text-sm text-gray-400 bg-transparent rounded-md p-1.5 hover:text-gray-700 hover:bg-gray-200" data-action="click->chart#toggleReverseXAxis">

                <svg xmlns="http://www.w3.org/2000/svg" data-chart-target="reverseXAxisButton" class="w-5 h-5 icon icon-tabler icon-tabler-arrows-right-left" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M21 7l-18 0"></path>
                  <path d="M18 10l3 -3l-3 -3"></path>
                  <path d="M6 20l-3 -3l3 -3"></path>
                  <path d="M3 17l18 0"></path>
                </svg>
              </button>
            <% end %>

            <%= render TooltipComponent.new(tooltip: "Toggle transmission plot", user: current_user) do %>
              <button type="button" class="flex items-center ml-auto text-sm text-gray-400 bg-transparent rounded-md p-1.5 hover:text-gray-700 hover:bg-gray-200" data-action="click->chart#toggleTransmissionPlot">

                <svg xmlns="http://www.w3.org/2000/svg" data-chart-target="transmissionPlotButton" class="w-5 h-5 peer icon icon-tabler icon-tabler-transform" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M3 6a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path>
                  <path d="M21 11v-3a2 2 0 0 0 -2 -2h-6l3 3m0 -6l-3 3"></path>
                  <path d="M3 13v3a2 2 0 0 0 2 2h6l-3 -3m0 6l3 -3"></path>
                  <path d="M15 18a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path>
                </svg>

                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-transform-filled hidden w-5 h-5 peer-[.hidden]:block" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M18 14a4 4 0 1 1 -3.995 4.2l-.005 -.2l.005 -.2a4 4 0 0 1 3.995 -3.8z" stroke-width="0" fill="currentColor"></path>
                  <path d="M16.707 2.293a1 1 0 0 1 .083 1.32l-.083 .094l-1.293 1.293h3.586a3 3 0 0 1 2.995 2.824l.005 .176v3a1 1 0 0 1 -1.993 .117l-.007 -.117v-3a1 1 0 0 0 -.883 -.993l-.117 -.007h-3.585l1.292 1.293a1 1 0 0 1 -1.32 1.497l-.094 -.083l-3 -3a.98 .98 0 0 1 -.28 -.872l.036 -.146l.04 -.104c.058 -.126 .14 -.24 .245 -.334l2.959 -2.958a1 1 0 0 1 1.414 0z" stroke-width="0" fill="currentColor"></path>
                  <path d="M3 12a1 1 0 0 1 .993 .883l.007 .117v3a1 1 0 0 0 .883 .993l.117 .007h3.585l-1.292 -1.293a1 1 0 0 1 -.083 -1.32l.083 -.094a1 1 0 0 1 1.32 -.083l.094 .083l3 3a.98 .98 0 0 1 .28 .872l-.036 .146l-.04 .104a1.02 1.02 0 0 1 -.245 .334l-2.959 2.958a1 1 0 0 1 -1.497 -1.32l.083 -.094l1.291 -1.293h-3.584a3 3 0 0 1 -2.995 -2.824l-.005 -.176v-3a1 1 0 0 1 1 -1z" stroke-width="0" fill="currentColor"></path>
                  <path d="M6 2a4 4 0 1 1 -3.995 4.2l-.005 -.2l.005 -.2a4 4 0 0 1 3.995 -3.8z" stroke-width="0" fill="currentColor"></path>
                </svg>

              </button>
            <% end %>

            <%= render TooltipComponent.new(tooltip: "Toggle second derivative", user: current_user) do %>
              <button type="button" class="flex items-center ml-auto text-sm text-gray-400 bg-transparent rounded-md p-1.5 hover:text-gray-700 hover:bg-gray-200" data-action="click->chart#toggleSecondDerivativePlot">

                <svg xmlns="http://www.w3.org/2000/svg" data-chart-target="derivativePlotButton" class="w-5 h-5 icon icon-tabler icon-tabler-exposure-plus-2 " width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M12 9a4 4 0 1 1 8 0c0 1.098 -.564 2.025 -1.159 2.815l-6.841 7.185h8"></path>
                  <path d="M3 12h6"></path>
                  <path d="M6 9v6"></path>
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-exposure-minus-2 hidden w-5 h-5 icon icon-tabler icon-tabler-arrows-vertical peer-[.hidden]:block" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M12 9a4 4 0 1 1 8 0c0 1.098 -.564 2.025 -1.159 2.815l-6.841 7.185h8"></path>
                  <path d="M3 12h6"></path>
                </svg>
              </button>
            <% end %>
            <%= render TooltipComponent.new(tooltip: "Toggle data labels", user: current_user) do %>
              <button type="button" class="flex items-center ml-auto text-sm text-gray-400 bg-transparent rounded-md p-1.5 hover:text-gray-700 hover:bg-gray-200" data-action="click->chart#toggleLabels">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-tags-off w-5 h-5 peer" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" data-chart-target="showLabelsButton">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <circle cx="8.5" cy="8.5" r="1" fill="currentColor"></circle>
                  <path d="M4 7v3.859c0 .537 .213 1.052 .593 1.432l8.116 8.116a2.025 2.025 0 0 0 2.864 0l4.834 -4.834a2.025 2.025 0 0 0 0 -2.864l-8.117 -8.116a2.025 2.025 0 0 0 -1.431 -.593h-3.859a3 3 0 0 0 -3 3z"></path>
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-tag-off hidden w-5 h-5 peer-[.hidden]:block" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M7.792 7.793a1 1 0 0 0 1.414 1.414"></path>
                  <path d="M4.88 4.877a2.99 2.99 0 0 0 -.88 2.123v3.859c0 .537 .213 1.052 .593 1.432l8.116 8.116a2.025 2.025 0 0 0 2.864 0l2.416 -2.416m2 -2l.416 -.416a2.025 2.025 0 0 0 0 -2.864l-8.117 -8.116a2.025 2.025 0 0 0 -1.431 -.593h-2.859"></path>
                  <path d="M3 3l18 18"></path>
                </svg>
              </button>
            <% end %>
            <%= render TooltipComponent.new(tooltip: "Normalize", user: current_user) do %>
              <button type="button" class="flex items-center ml-auto text-sm text-gray-400 bg-transparent rounded-md p-1.5 hover:text-gray-700 hover:bg-gray-200" data-action="click->chart#toggleNormalize">
                <svg xmlns="http://www.w3.org/2000/svg" data-chart-target="normalizeButton" class="w-5 h-5 icon icon-tabler icon-tabler-fold peer" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M12 3v6l3 -3m-6 0l3 3"></path>
                  <path d="M12 21v-6l3 3m-6 0l3 -3"></path>
                  <path d="M4 12l1 0"></path>
                  <path d="M9 12l1 0"></path>
                  <path d="M14 12l1 0"></path>
                  <path d="M19 12l1 0"></path>
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="hidden w-5 h-5 icon icon-tabler icon-tabler-arrows-vertical peer-[.hidden]:block" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M8 7l4 -4l4 4"></path>
                  <path d="M8 17l4 4l4 -4"></path>
                  <path d="M12 3l0 18"></path>
                </svg>
              </button>
            <% end %>
            <%= render TooltipComponent.new(tooltip: "Interpolate", user: current_user) do %>
              <button type="button" class="flex items-center ml-auto text-sm text-gray-400 bg-transparent rounded-md p-1.5 hover:text-gray-700 hover:bg-gray-200" data-action="click->chart#toggleInterpolation">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 icon icon-tabler icon-tabler-graph peer" data-chart-target="interpolateButton" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M4 18v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"></path>
                  <path d="M7 14l3 -3l2 2l3 -3l2 2"></path>
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="hidden w-5 h-5 icon icon-tabler icon-tabler-graph-off peer-[.hidden]:block" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M8 4h10a2 2 0 0 1 2 2v10m-.586 3.414a2 2 0 0 1 -1.414 .586h-12a2 2 0 0 1 -2 -2v-12c0 -.547 .22 -1.043 .576 -1.405"></path>
                  <path d="M7 14l3 -3l2 2l.5 -.5m2 -2l.5 -.5l2 2"></path>
                  <path d="M3 3l18 18"></path>
                </svg>
              </button>
            <% end %>
            <%= render TooltipComponent.new(tooltip: "Reset", user: current_user) do %>
              <button type="button" class="flex items-center ml-auto text-sm text-gray-400 bg-transparent rounded-md p-1.5 hover:text-gray-700 hover:bg-gray-200" data-action="click->chart#resetAll">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 icon icon-tabler icon-tabler-rotate" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M19.95 11a8 8 0 1 0 -.5 4m.5 5v-5h-5"></path>
                </svg>
              </button>
            <% end %>
            <%= render TooltipComponent.new(tooltip: "Close", user: current_user) do %>
              <button type="button" class="flex items-center ml-auto text-sm text-gray-400 bg-transparent rounded-md p-1.5 hover:text-gray-700 hover:bg-gray-200" data-action="click->modal#toggle">
                <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                <span class="sr-only">Close modal</span>
              </button>
            <% end %>

          </div>
        </div>
        <% if spectrum.processed_file.attached? && spectrum.processed_file.persisted? %>
          <%= tag.canvas id: "canvas-#{spectrum.id}" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
