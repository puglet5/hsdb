<% if activity.trackable %>
  <li class="mb-2 ml-4">
    <div class="absolute w-3 h-3 bg-gray-200 border border-white rounded-full mt-1.5 -left-1.5 dark:border-gray-900 dark:bg-gray-700"></div>
    <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
      Forum | <%= activity.created_at.strftime("%d %b, %Y at %I:%M %p") %>
    </time>
    <div class="flex mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
      <span class="my-auto">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
          <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
        </svg>
      </span>
      <p class="ml-2">
        <%= link_to truncate(activity.trackable.title, :length => 71), activity.trackable %>
      </p>
    </div>
  </li>
<% end %>
