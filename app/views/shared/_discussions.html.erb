<% if @discussions_pinned.count > 0 %>
  <div class="flex border-b">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
      <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z" />
    </svg>
  </svg>
  <h2 class=" mb-4 text-2xl font-extrabold tracking-tight leading-none text-gray-900">Pinned</h2>
</div>
<div class="block m-8 pb-0 ml-2 mt-4 p-6 bg-white rounded-lg border border-gray-200 shadow-md">
  <ol class="relative border-l border-gray-200 dark:border-gray-700">
    <% @discussions_pinned.each do |discussion| %>
      <li class="mb-10 ml-4">
        <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
        <p class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
          <% if discussion.user %>
            By
            <%= link_to discussion.user, class: "font-medium" do %>
              <%= (discussion.user&.first_name) + " " + (discussion&.user.last_name) %>
            <% end %>
            in
            <% if discussion.category %>
              <%= link_to discussion.category.category_name, discussion.category, class: "font-medium" %>
            <% end %>
          <% end %>
          <%= time_ago_in_words(discussion.created_at) %> ago,
          last active
          <% if discussion.replies.any? %>
            <%= time_ago_in_words(discussion.replies.last.created_at) %>
          <% else %>
            <%= time_ago_in_words(discussion.created_at) %>
          <% end %>
          ago
        </p>
        <div class="flex justify-between">
          <%= link_to discussion do %>
            <div class="mb-2 flex">
              <span class="bg-gray-100 text-gray-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 h-6 my-auto rounded mr-2 dark:bg-gray-700 dark:text-gray-300">
                <%= discussion.replies.count%>
              </span>
              <h3 class="text-xl font-bold mr-4 my-1">
                <%= discussion.title %>
              </h3>
            </div>
          <% end %>
          <% if discussion_author(discussion) || has_role?(:admin) %>
            <div class="flex">
              <%= link_to edit_discussion_path(discussion), class: "text-gray-500 my-auto" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                </svg>
              <% end %>
              <%= link_to discussion, data: {turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-gray-500 my-auto" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= link_to discussion do %>
          <p>
            <%= truncate(strip_tags(discussion.content.to_s), length: 140) %>
          </p>
        <% end %>
      </li>
    <% end %>
  </ol>
</div>
<% end %>
