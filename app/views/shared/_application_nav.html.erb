<nav class="relative px-2 bg-white border border-gray-200 shadow-xs py-2.5 sm:px-4">
  <div class="grid grid-cols-3 gap-4">
    <div class="my-auto place-self-start">
      <span class="flex flex-row self-center text-xl font-semibold whitespace-nowrap text-primary-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 my-auto mr-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <ellipse cx="12" cy="6" rx="8" ry="3"></ellipse>
          <path d="M4 6v6a8 3 0 0 0 16 0v-6"></path>
          <path d="M4 12v6a8 3 0 0 0 16 0v-6"></path>
        </svg>
        <p class="hidden lg:block">
          <% unless Rails.application.routes.recognize_path(:samples)[:controller] == params[:controller] %>
            ITMO Heritage Science DB
          <% else %>
            ITMO Reference Spectra DB
          <% end %>
        </p>
      </span>
    </div>
    <div class="my-auto place-self-center">
      <ul class="flex flex-row mt-0 space-x-8 text-sm font-medium">
        <% if current_user %>
          <%= render TooltipComponent.new(tooltip: "Home", cls: "p-0 m-0 border-0", user: current_user) do %>
            <li class="p-0 bg-transparent text-primary-300 hover:text-primary-500">
              <%= link_to root_path do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 <%= active_style root_path, "!text-primary-500" %>" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <polyline points="5 12 3 12 12 3 21 12 19 12"></polyline>
                  <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
                  <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
                </svg>
              <% end %>
            </li>
          <% end %>

          <%= render TooltipComponent.new(tooltip: "Artworks", cls: "p-0 m-0 border-0", user: current_user) do %>
            <li class="p-0 bg-transparent text-primary-300 hover:text-primary-500">
              <%= link_to :artworks do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 <%= active_style :artworks, "!text-primary-500" %>" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M3 21v-4a4 4 0 1 1 4 4h-4"></path>
                  <path d="M21 3a16 16 0 0 0 -12.8 10.2"></path>
                  <path d="M21 3a16 16 0 0 1 -10.2 12.8"></path>
                  <path d="M10.6 9a9 9 0 0 1 4.4 4.4"></path>
                </svg>
              <% end %>
            </li>
          <% end %>

          <%= render TooltipComponent.new(tooltip: "Forum", cls: "p-0 m-0 border-0", user: current_user) do %>
            <li class="p-0 bg-transparent text-primary-300 hover:text-primary-500">
              <%= link_to :discussions do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 <%= active_style :discussions, "!text-primary-500" %>" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M12 20l-3 -3h-2a3 3 0 0 1 -3 -3v-6a3 3 0 0 1 3 -3h10a3 3 0 0 1 3 3v6a3 3 0 0 1 -3 3h-2l-3 3"></path>
                  <line x1="8" y1="9" x2="16" y2="9"></line>
                  <line x1="8" y1="13" x2="14" y2="13"></line>
                </svg>
              <% end %>
            </li>
          <% end %>

          <%= render TooltipComponent.new(tooltip: "Samples", cls: "p-0 m-0 border-0", user: current_user) do %>
            <li>
              <%= link_to :samples do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-itmo_misc_1-300 hover:text-itmo_misc_1-500 <%= active_style :samples, "!text-itmo_misc_1-500" %>" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <polyline points="4 19 8 13 12 15 16 10 20 14 20 19 4 19"></polyline>
                  <polyline points="4 12 7 8 11 10 16 4 20 8"></polyline>
                </svg>
              <% end %>
            </li>
          <% end %>

        <% end %>
      </ul>
    </div>
    <%= tag.div class: "flex my-auto place-self-end space-x-2" do %>
      <% if current_user %>
        <%= turbo_frame_tag :dark, data: { turbo_action: :advance } do %>
          <%= simple_form_for current_user, url: update_settings_user_path(current_user), html: { method: :patch, class: "my-auto flex items-center justify-center" }, validate: true, data: { turbo: false } do |f| %>

            <%= hidden_field_tag "user[settings[ui][dark]]", false %>
            <% checked =  !current_user.settings(:ui).dark ? "checked" : 0 %>
            <%= f.check_box "settings[ui][dark]", { multiple: false, class: "hidden", checked: checked }, true, false %>
            <% if !current_user.settings(:ui).dark %>
              <%= render TooltipComponent.new(tooltip: "Dark mode", user: current_user, cls: "!inline-flex") do %>
                <button type="submit" class="my-auto h-full">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-moon-stars text-primary-300 hover:text-primary-500" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z"></path>
                    <path d="M17 4a2 2 0 0 0 2 2a2 2 0 0 0 -2 2a2 2 0 0 0 -2 -2a2 2 0 0 0 2 -2"></path>
                    <path d="M19 11h2m-1 -1v2"></path>
                  </svg>
                </button>
              <% end %>
            <% else %>
              <%= render TooltipComponent.new(tooltip: "Light mode", user: current_user, cls: "!inline-flex") do %>
                <button type="submit">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-sun-filled text-primary-300 hover:text-primary-500" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M12 19a1 1 0 0 1 .993 .883l.007 .117v1a1 1 0 0 1 -1.993 .117l-.007 -.117v-1a1 1 0 0 1 1 -1z" stroke-width="0" fill="currentColor"></path>
                    <path d="M18.313 16.91l.094 .083l.7 .7a1 1 0 0 1 -1.32 1.497l-.094 -.083l-.7 -.7a1 1 0 0 1 1.218 -1.567l.102 .07z" stroke-width="0" fill="currentColor"></path>
                    <path d="M7.007 16.993a1 1 0 0 1 .083 1.32l-.083 .094l-.7 .7a1 1 0 0 1 -1.497 -1.32l.083 -.094l.7 -.7a1 1 0 0 1 1.414 0z" stroke-width="0" fill="currentColor"></path>
                    <path d="M4 11a1 1 0 0 1 .117 1.993l-.117 .007h-1a1 1 0 0 1 -.117 -1.993l.117 -.007h1z" stroke-width="0" fill="currentColor"></path>
                    <path d="M21 11a1 1 0 0 1 .117 1.993l-.117 .007h-1a1 1 0 0 1 -.117 -1.993l.117 -.007h1z" stroke-width="0" fill="currentColor"></path>
                    <path d="M6.213 4.81l.094 .083l.7 .7a1 1 0 0 1 -1.32 1.497l-.094 -.083l-.7 -.7a1 1 0 0 1 1.217 -1.567l.102 .07z" stroke-width="0" fill="currentColor"></path>
                    <path d="M19.107 4.893a1 1 0 0 1 .083 1.32l-.083 .094l-.7 .7a1 1 0 0 1 -1.497 -1.32l.083 -.094l.7 -.7a1 1 0 0 1 1.414 0z" stroke-width="0" fill="currentColor"></path>
                    <path d="M12 2a1 1 0 0 1 .993 .883l.007 .117v1a1 1 0 0 1 -1.993 .117l-.007 -.117v-1a1 1 0 0 1 1 -1z" stroke-width="0" fill="currentColor"></path>
                    <path d="M12 7a5 5 0 1 1 -4.995 5.217l-.005 -.217l.005 -.217a5 5 0 0 1 4.995 -4.783z" stroke-width="0" fill="currentColor"></path>
                  </svg>
                </button>
              <% end %>
            <% end %>
          <% end %>
        <% end %>

        <%= tag.div data: { controller: "dropdown" }, class: "my-auto" do %>
          <button type="button" class="flex mx-0 text-sm bg-white rounded-full md:mr-0 text-primary-300 hover:text-primary-500 <%= active_style url_for(current_user), "!text-primary-500 " %> <%= active_style "/edit", "!text-primary-500 " %>" aria-expanded="false" data-controller-target="toggle" data-action="click->dropdown#toggle">
            <span class="sr-only">Open user menu</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <circle cx="12" cy="12" r="9"></circle>
              <circle cx="12" cy="10" r="3"></circle>
              <path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855"></path>
            </svg>
          </button>
          <%= tag.div data: { "dropdown-target": "dropdown" }, class: "absolute right-0 z-50 hidden text-base list-none bg-white divide-y divide-gray-100 rounded shadow top-12" do %>
            <%= render "shared/application_nav_sidebar" %>
          <% end %>
        <% end %>

      <% end %>
    <% end %>
  </div>
</nav>
