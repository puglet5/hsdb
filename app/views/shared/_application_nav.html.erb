        <div class="hidden z-50 my-4 text-base list-none bg-white rounded divide-y divide-gray-100 shadow " id="dropdown" style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate(955px, 1844px);" data-popper-placement="bottom">
          <%= render "shared/application_nav_sidebar" %>
        </div>
      <% end %>
    </div>
  </div>
</nav>
