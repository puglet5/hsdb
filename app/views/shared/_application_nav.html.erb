                    <% end %>
                  </ul>
                </li>
              </ul>
            </div>
          </aside>
        </div>
      <% else %>
        <button type="button" class="flex mx-0 text-sm bg-white rounded-full md:mr-0 focus:ring-4 focus:ring-gray-300 text-itmo_primary-500" id="user-menu-button" aria-expanded="false" data-dropdown-toggle="dropdown">
