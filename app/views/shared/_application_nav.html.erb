<nav class="relative py-2.5 px-2 bg-white border border-gray-200 sm:px-4 shadow-xs">
  <div class="grid grid-cols-3 gap-4">
    <div class="place-self-start">
      <span class="flex flex-row self-center text-xl font-semibold whitespace-nowrap text-primary-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="my-auto mr-2 w-6 h-6" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <ellipse cx="12" cy="6" rx="8" ry="3"></ellipse>
          <path d="M4 6v6a8 3 0 0 0 16 0v-6"></path>
          <path d="M4 12v6a8 3 0 0 0 16 0v-6"></path>
        </svg>
        <p class="hidden lg:block">
          <% unless Rails.application.routes.recognize_path(:spectra)[:controller] == params[:controller] %>
            ITMO Heritage Science DB
          <% else %>
            ITMO Reference Spectra DB
          <% end %>
        </p>
      </span>
    </div>
    <div class="place-self-center my-auto">
      <ul class="flex flex-row mt-0 space-x-8 text-sm font-medium">
        <% if current_user %>
          <%= render TooltipComponent.new(tooltip: "Home", cls: "p-0 m-0 border-0", user: current_user) do %>
            <li class="p-0 bg-transparent text-primary-300">
              <%= link_to root_path do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 <%= active_style root_path, "!text-primary-500" %>" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <polyline points="5 12 3 12 12 3 21 12 19 12"></polyline>
                  <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
                  <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
                </svg>
              <% end %>
            </li>
          <% end %>

          <%= render TooltipComponent.new(tooltip: "About", cls: "p-0 m-0 border-0", user: current_user) do %>
            <li class="p-0 bg-transparent text-primary-300">
              <%= link_to :about do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 <%= active_style :about, "!text-primary-500" %>" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <circle cx="12" cy="12" r="9"></circle>
                  <line x1="12" y1="8" x2="12.01" y2="8"></line>
                  <polyline points="11 12 12 12 12 16 13 16"></polyline>
                </svg>
              <% end %>
            </li>
          <% end %>

          <%= render TooltipComponent.new(tooltip: "Uploads", cls: "p-0 m-0 border-0", user: current_user) do %>
            <li class="p-0 bg-transparent text-primary-300">
              <%= link_to :uploads do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 <%= active_style :uploads, "!text-primary-500" %>" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M3 21v-4a4 4 0 1 1 4 4h-4"></path>
                  <path d="M21 3a16 16 0 0 0 -12.8 10.2"></path>
                  <path d="M21 3a16 16 0 0 1 -10.2 12.8"></path>
                  <path d="M10.6 9a9 9 0 0 1 4.4 4.4"></path>
                </svg>
              <% end %>
            </li>
          <% end %>

          <%= render TooltipComponent.new(tooltip: "Forum", cls: "p-0 m-0 border-0", user: current_user) do %>
            <li class="p-0 bg-transparent text-primary-300">
              <%= link_to :discussions do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 <%= active_style :discussions, "!text-primary-500" %>" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M12 20l-3 -3h-2a3 3 0 0 1 -3 -3v-6a3 3 0 0 1 3 -3h10a3 3 0 0 1 3 3v6a3 3 0 0 1 -3 3h-2l-3 3"></path>
                  <line x1="8" y1="9" x2="16" y2="9"></line>
                  <line x1="8" y1="13" x2="14" y2="13"></line>
                </svg>
              <% end %>
            </li>
          <% end %>

          <%= render TooltipComponent.new(tooltip: "Spectra", cls: "p-0 m-0 border-0", user: current_user) do %>
            <li>
              <%= link_to :spectra do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-itmo_misc_1-300 <%= active_style :spectra, "!text-itmo_misc_1-500" %>" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <polyline points="4 19 8 13 12 15 16 10 20 14 20 19 4 19"></polyline>
                  <polyline points="4 12 7 8 11 10 16 4 20 8"></polyline>
                </svg>
              <% end %>
            </li>
          <% end %>

        <% end %>
      </ul>
    </div>
    <%= tag.div data: { controller: "dropdown" }, class: "flex my-auto place-self-end" do %>
      <% if !current_user %>
        <button class="my-auto text-center bg-white rounded-lg focus:ring-4 focus:ring-gray-300 focus:outline-none text-primary-500 hover:text-primary-300" type="button" data-action="click->dropdown#toggle">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </button>
        <!-- Dropdown language menu -->
        <%= tag.div data: { "dropdown-target": "dropdown" }, class: "absolute right-0 z-50 hidden text-base list-none bg-white divide-y divide-gray-100 rounded shadow top-12" do %>
          <aside class="w-64" aria-label="Sidebar">
            <%= tag.div data: { controller: "dropdown" } do %>
              <div class="overflow-y-auto bg-white rounded">
                <button type="button" class="flex items-center p-2 w-full text-base font-normal text-gray-900 rounded-lg transition duration-75 hover:bg-gray-100 group" data-action="click->dropdown#toggle">
                  <span class="flex-1 ml-3 text-left whitespace-nowrap" sidebar-toggle-item>Language</span>
                  <span class="inline-flex justify-center items-center px-2 ml-3 text-sm font-medium text-gray-800 bg-gray-200 rounded-full"><%= t('language_abbr', locale: locale) %></span>
                  <svg sidebar-toggle-item class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                </button>
                <%= tag.div data: { "dropdown-target": "dropdown" }, class: "hidden" do %>
                  <ul class="py-2 space-y-2">
                    <% I18n.available_locales.each do |locale| %>
                      <li class="">
                        <%= link_to t('language_name', locale: locale), url_for(params.to_unsafe_h.merge(locale: locale)), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                      </li>
                    <% end %>
                  </ul>
                <% end %>
              </div>
            <% end %>
          </aside>
        <% end %>
      <% else %>
        <%= tag.div data: { controller: "dropdown" } do %>
          <button type="button" class="flex mx-0 text-sm bg-white rounded-full md:mr-0 focus:ring-4 focus:ring-gray-300 text-primary-500" aria-expanded="false" data-controller-target="toggle" data-action="click->dropdown#toggle">
            <span class="sr-only">Open user menu</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <circle cx="12" cy="12" r="9"></circle>
              <circle cx="12" cy="10" r="3"></circle>
              <path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855"></path>
            </svg>
          </button>
          <%= tag.div data: { "dropdown-target": "dropdown" }, class: "absolute right-0 z-50 hidden text-base list-none bg-white divide-y divide-gray-100 rounded shadow top-12" do %>
            <%= render "shared/application_nav_sidebar" %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</nav>
