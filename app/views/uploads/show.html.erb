<div class="container">
<p id="notice"><%= notice %></p>
<h2 class="center">
  <%= @upload.title %>
</h1>
<% (0...@upload.images.count).each do |image| %>
  <%= image_tag(@upload.thumbnail(image)) %>
<% end %>
<h3>
  <strong>Description:</strong>
</h3>
  <%= @upload.description %>
<p>
  <%= @upload.body %>
</p>
<%= link_to "Edit", edit_upload_path(@upload) %> |
<%= link_to "Back", uploads_path %>
</div>

