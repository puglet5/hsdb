  <%= simple_form_for(@upload) do |form| %>
  <label class="block mb-4 text-lg border-b font-medium text-gray-900 dark:text-gray-300">Info</label>
  <div class="grid gap-6 mb-6 lg:grid-cols-2">
    <div>
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Title</label>
      <%= form.text_field :title, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "Mona Lisa by Leonardo da Vinci (c. 1503â€“1506)", required: true %>
    </div>
    <div>
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Status</label>
      <%= form.input_field :status, default: upload.status, collection: Upload.statuses.keys.map { |s| [s.humanize, s] }, class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-200 appearance-none dark:text-gray-400 dark:border-gray-700 focus:outline-none focus:ring-0 focus:border-gray-200 peer" %>
    </div>
    <div>
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Thumbnail</label>
      <%= form.file_field :thumbnail, multiple: false, direct_upload: false, class: "block w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 cursor-pointer dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-300" id="file_input_help">.svg, .png, .jpg or .gif of any size </p>
    </div>
    <div data-uppy="upload[images][]" class="row-span-2">
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Images</label>
      <div id="uppy-target">
      </div>
      <input type="file" title=" " class="hide-file-input-text block w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 cursor-pointer dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 my-auto" data-behavior="uppy-trigger">
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-300" id="file_input_help">.svg, .png, .jpg or .gif of any size </p>
    </div>
    <div>
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Documents</label>
      <%= form.file_field :documents, multiple: true, direct_upload: false, class: "block w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 cursor-pointer dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-300" id="file_input_help">.pdf or any other format (max: 30 MB)</p>
    </div>
  </div>
  <div class="mb-6">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400">Short description</label>
    <%= form.text_area :description, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "Description to be displayed on object cards" %>
  </div>
  <div class="mb-6">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400">Detailed description</label>
    <%= form.rich_text_area :body, placeholder: "Description to be displayed on object page" %>
  </div>
  <% if params[:action] == "new" || params[:action] == "create" %>
    <!-- Metadata fields -->
    <div class="">
      <button type="button" id="add-fields" class="mt-2 hidden text-black focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm  text-center "><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
        </svg></button>
    </div>
    <label class="block mb-4 text-lg border-b font-medium text-gray-900 dark:text-gray-300">Metadata</label>
    <div class="grid grid-cols-12 gap-4 mb-4 gap-y-0">
      <div class="col-span-7">
        <div class="hidden grid-cols-11 gap-2 container mx-auto" id="metadata-form-template">
          <div class="mx-auto my-auto col-span-1">
            <button type="button" id="remove-field" class="mb-6 text-black focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm text-center"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20 12H4" />
              </svg></button>
          </div>
          <div class="col-span-5">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Field Name</label>
            <div class="relative mb-6">
              <input type="text" name="metadata-field-name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="wavelength, etc." autofocus>
            </div>
          </div>
          <div class="col-span-5">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Value</label>
            <div class="flex">
              <input type="text" name="metadata-field-value" class="rounded-lg bg-gray-50 border text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="1064 or [532, 1064]">
            </div>
          </div>
        </div>
        <span id="insert-node" class="hidden"></span>
      </div>
      <div class="col-span-5 ">
        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">JSON preview</label>
        <div class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg min-h-2/3">
          <div class="tree">
          </div>
          <div class="hidden">
            <%= form.label :metadata %>
            <%= form.text_field :metadata, id: "json-hidden-input" %>
          </div>
        </div>
      </div>
    </div>
  <% elsif params[:action] == "edit" %>
    <div class="">
      <%= form.label :metadata %>
      <%= form.text_area :metadata, value: JSON.pretty_generate(@upload.metadata), class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    </div>
  <% end %>
  <div class="flex">
    <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
      <%= form.submit %>
    </button>
    <%= link_to "Back", uploads_path, class: "block my-auto ml-4 text-sm font-medium text-gray-500 dark:text-gray-300 " %>
  </div>
<% end %>
