    <%= form.label :images %>
    <%= form.file_field :images, multiple: true, direct_upload: true %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div class="field">
    <%= form.label :body %>
    <%= form.rich_text_area :body %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
