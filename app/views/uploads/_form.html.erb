  <%= simple_form_for @upload do |form| %>
  <!-- Attachment retention on form resubmit, must stay at the top  -->
  <% form.object.images.each do |image| %>
    <%= form.hidden_field :images, value: image.signed_id, multiple: true %>
  <% end %>
  <%= form.hidden_field :thumbnail, value: form.object.thumbnail.signed_id if form.object.thumbnail.attached? %>
  <% form.object.documents.each do |doc| %>
    <%= form.hidden_field :documents, value: doc.signed_id, multiple: true %>
  <% end %>
  <!-- -->
  <label class="block mb-4 text-lg font-medium text-gray-900 border-b dark:text-gray-300">Info</label>
  <div class="grid gap-6 mb-6 lg:grid-cols-2">
    <div>
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Title</label>
      <% if params[:action] == "edit" || params[:action] == "update" %>
        <%= form.input :title, input_html: {class: "block w-full text-sm text-gray-500 bg-gray-100 border border-gray-300 rounded-lg text-ellipsis focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"}, placeholder: "Mona Lisa by Leonardo da Vinci (c. 1503–1506)", required: true, disabled: true, readonly: true, hint: false, label: false %>
      <% else %>
        <%= form.input :title, input_html: {class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 disabled"}, placeholder: "Mona Lisa by Leonardo da Vinci (c. 1503–1506)", required: true, hint: false, label: false %>
      <% end %>
    </div>
    <div>
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Status</label>
      <%= form.input :status, default: upload.status, collection: Upload.statuses.keys.map { |s| [s.humanize, s] }, input_html: {class: "block w-full px-0 text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-200 appearance-none py-2.5 dark:text-gray-400 dark:border-gray-700 focus:outline-none focus:ring-0 focus:border-gray-200 peer"} %>
    </div>
    <div>
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Thumbnail</label>
      <div class="flex">
        <%= form.file_field :thumbnail, multiple: false, direct_upload: true, class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-100 bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
        <% if params[:action] == "edit" || params[:action] == "update" %>
          <% if @upload.thumbnail.attached? %>
            <%= tag.div class: "block my-auto ml-2 text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-100 p-1.5 bg-gray-50", data: {controller: "popup", "popup-target": "trigger", action: "mouseover->popup#show mouseout->popup#hide click->modal#interact", "modal-toggle": "thumbnail-modal"} do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
              </svg>
              <%= tag.div class: "absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700", data: {"popup-target": "tooltip"}, role: "tooltip" do %>
                Show attached thumbnail
              <% end %>
            <% end %>
            <%= render "thumbnail_modal", upload: @upload %>
          <% end %>
        <% end %>
      </div>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-300" id="file_input_help">.svg, .png, .jpg or .gif of any size </p>
    </div>
    <%= tag.div class: "row-span-2", data: {"uppy": "upload[images][]", controller: "uploads", "uploads-target": "div"} do %>
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Images</label>
      <div class="flex">
        <%= tag.div class: "flex items-center justify-center w-full h-40 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-100 py-auto", data: {"uploads-target": "trigger"} do %>
          <div class="text-center">
            <% if params[:action] == "edit" || params[:action] == "update" %>
              <p class="font-medium" id="uppy-text">
                <% unless @images_count_pre.to_i == @images_count_err.to_i %>
                  Add <%= @images_count_err.to_i - @images_count_pre.to_i %> images
                <% else %>
                  Add images
                <% end %>
              </p>
              <p class="text-sm text-gray-600">
                (already attached: <%= @images_count_err ? @images_count_pre.to_i : @upload.images.count %>)
              </p>
            <% else %>
              Browse...
            <% end %>
          </div>
        <% end %>
        <% if params[:action] == "edit" || params[:action] == "update" %>
          <% if @upload.images.any? %>
            <%= tag.div class: "flex items-center justify-center h-40 my-auto ml-2 text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer p-1.5 hover:bg-gray-100 bg-gray-50", data: {controller: "popup", "popup-target": "trigger", action: "mouseover->popup#show mouseout->popup#hide click->modal#interact", "modal-toggle": "images-modal"} do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <%= tag.div class: "absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700", data: {"popup-target": "tooltip"}, role: "tooltip" do %>
                Show/delete attached images
              <% end %>
            <% end %>
            <%= render "images_modal", upload: @upload %>
          <% end %>
        <% end %>
      </div>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-300" id="file_input_help">.svg, .png, .jpg or .gif of any size </p>
    <% end %>
    <div>
      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Documents</label>
      <div class="flex">
        <%= form.file_field :documents, multiple: true, direct_upload: true, class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-100 bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
        <% if params[:action] == "edit" || params[:action] == "update" %>
          <% if @upload.documents.any? %>
            <%= tag.div class: "block my-auto ml-2 text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer p-1.5 bg-gray-50 hover:bg-gray-100", data: {controller: "popup", "popup-target": "trigger", action: "mouseover->popup#show mouseout->popup#hide click->modal#interact", "modal-toggle": "documents-modal"} do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />
              </svg>
              <%= tag.div class: "absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700", data: {"popup-target": "tooltip"}, role: "tooltip" do %>
                Show attached documents
              <% end %>
            <% end %>
            <%= render "documents_modal", upload: @upload %>
          <% end %>
        <% end %>
      </div>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-300" id="file_input_help">.pdf or any other format (max: 30 MB)</p>
    </div>
  </div>
  <div class="mb-6">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400">Short description</label>
    <%= form.input :description, input_html: {class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg p-2.5 bg-gray-50 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"}, placeholder: "Description to be displayed on object cards", data: {controller: "textarea", action: 'input->textarea#resize', 'textarea-target': 'input' }, hint: false, label: false %>
  </div>
  <div class="mb-6">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400">Detailed description</label>
    <%= form.input :body, as: :rich_text_area, hint: false, label: false, placeholder: "Description to be displayed on object page" %>
  </div>
  <% if params[:action] == "new" || params[:action] == "create" %>
    <!-- Metadata fields -->
    <div class="">
      <button type="button" id="add-fields" class="hidden mt-2 text-sm font-medium text-center text-black rounded-lg focus:ring-4 focus:outline-none focus:ring-primary-200 dark:focus:ring-primary-800 "><svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
        </svg></button>
    </div>
    <label class="block mb-4 text-lg font-medium text-gray-900 border-b dark:text-gray-300">Metadata</label>
    <div class="grid grid-cols-12 gap-4 mb-4 gap-y-0">
      <div class="col-span-7">
        <div class="container hidden grid-cols-11 mx-auto gap-1.5" id="metadata-form-template">
          <div class="col-span-1 mx-auto my-auto">
            <button type="button" id="remove-field" class="mb-6 text-sm font-medium text-center text-black rounded-lg focus:ring-4 focus:outline-none focus:ring-secondary-300 dark:focus:ring-secondary-800"><svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20 12H4" />
              </svg></button>
          </div>
          <div class="col-span-5">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Field Name</label>
            <div class="relative mb-6">
              <input type="text" name="metadata-field-name" class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="wavelength, etc." autofocus>
            </div>
          </div>
          <div class="col-span-5">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Value</label>
            <div class="flex">
              <input type="text" name="metadata-field-value" class="flex-1 block w-full min-w-0 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="1064 or [532, 1064]">
            </div>
          </div>
        </div>
        <span id="insert-node" class="hidden"></span>
      </div>
      <div class="col-span-5 ">
        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">JSON preview</label>
        <div class="text-gray-900 border border-gray-300 rounded-lg bg-gray-50 min-h-2/3">
          <div class="tree">
          </div>
          <div class="hidden">
            <%= form.label :metadata %>
            <%= form.text_field :metadata, id: "json-hidden-input" %>
          </div>
        </div>
      </div>
    </div>
  <% elsif params[:action] == "edit" || params[:action] == "update" %>
    <div class="mb-4">
      <label class="block mb-4 text-lg font-medium text-gray-900 border-b dark:text-gray-300">Metadata</label>
      <%= form.text_area :metadata, value: @upload.metadata, class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg p-2.5 bg-gray-50 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", cols: 20, row: 2, data: {controller: "textarea", action: 'input->textarea#resize', 'textarea-target': 'input' } %>
    </div>
  <% end %>
  <div class="flex">
    <button type="submit" class="w-full px-5 text-sm font-medium text-center text-white rounded-lg bg-primary-500 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-200 sm:w-auto py-2.5 dark:bg-primary-500 dark:hover:bg-primary-500 dark:focus:ring-primary-800">
      <%= form.submit %>
    </button>
    <% if params[:action] == "new" || params[:action] == "create" %>
      <%= link_to "Back", uploads_path, class: "block my-auto ml-4 text-sm font-medium text-gray-500 dark:text-gray-300 " %>
    <% elsif params[:action] == "edit" %>
      <%= link_to "Back", @upload, class: "block my-auto ml-4 text-sm font-medium text-gray-500 dark:text-gray-300 " %>
    <% end %>
  </div>
<% end %>
