<% img_class = "responsive medium"%>
<%= link_to upload, class: "fill" do %>
  <% if upload.thumbnail.attached? %>
    <%= image_tag(upload.thumbnail.variant(resize: '400x300^', crop: '400x300+0+0').processed, class: img_class) %>
  <% elsif upload.images.any? %>
    <%= image_tag(upload.to_thumbnail(0), class: img_class) %>
  <% else %>
    <%= image_tag("https://picsum.photos/400/300", class: img_class)%>
  <% end %>
  <%= tag.h5 upload.title.truncate(20), class: "no-margin" %>
<% end %>
