<div class="mb-4 bg-white border border-gray-200 rounded-t-lg shadow-md dark:bg-gray-800 dark:border-gray-700">
  <%= link_to upload do %>
    <div class="relative flex">
      <% if upload.thumbnail.attached? %>
        <%= image_tag upload.thumbnail.variant(resize: '400x300^', crop: '400x300+0+0').processed, class: "" %>
      <% elsif upload.images.any? %>
        <%= image_tag upload.images.first.variant(resize: '400x300^', crop: '400x300+0+0').processed %>
      <% else %>
        <%= image_tag "https://dummyimage.com/300.png" , class: "" %>
      <% end %>
      <span class="absolute top-0 right-0 inline-flex items-center text-xs font-medium text-gray-800 bg-primary-300 px-2.5 py-0.5 dark:bg-gray-700 dark:text-gray-300">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path></svg>
        <%= "#{time_ago_in_words upload.created_at} ago" %>
      </span>
      <span class="absolute top-0 left-0 mr-2 text-xs font-medium rounded-none <%= status_badge_style(upload.status) %> px-2.5 py-0.5">
        <%= upload.status %>
      </span>
    </div>
    <div class="p-5">
      <h5 class="mb-0 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= upload.title.truncate(30) %></h5>
    </div>
  <% end %>
  <p class="px-5 mb-3 font-normal text-gray-700 dark:text-gray-400"><%= upload.description.truncate(120) %></p>
</div>
