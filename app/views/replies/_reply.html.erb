<%= tag.div data: {controller: "reply", "reply-target": "reply"} do %>
  <span class="absolute flex items-center justify-center rounded-full -left-3 bg-primary-300 ring-8 ring-white dark:ring-gray-900 dark:bg-primary-900">
    <% if reply.user %>
      <% if reply.user.avatar.attached? %>
        <%= image_tag  reply.user.avatar, class:"object-cover w-6 h-6 rounded-full shadow-lg" %>
      <% end %>
    <% end %>
  </span>
  <%= turbo_frame_tag reply do %>
    <div class="p-4 my-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-700 dark:border-gray-600">
      <div class="items-center justify-between mb-3 sm:flex">
        <div class="text-sm font-normal text-gray-500 lex dark:text-gray-300">
          <% if reply.user %>
            <%= full_name(reply.user) %>
          <% end %>
          commented:
        </div>
        <div class="flex">
          <time class="mb-1 text-xs font-normal text-gray-400 sm:order-last sm:mb-0">
            <%= time_ago_in_words(reply.created_at) %> ago
            <% unless reply.created_at == reply.updated_at %>
              (edited <%= time_ago_in_words reply.updated_at %> ago)
            <% end %>
          </time>
          <% if reply_author(reply) || has_role?(:admin) %>
            <div class="flex mr-2">
              <%= link_to edit_discussion_reply_path(reply.discussion, reply) do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mb-1 text-gray-400 mx-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                </svg>
              <% end %>
              <%= link_to [reply.discussion, reply],
                           data: {turbo_method: :delete, turbo_confirm: "Are you sure ?", "reply-target": "delete" } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mx-1 mb-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="p-3 text-xs font-normal text-gray-700 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-600 dark:border-gray-500 dark:text-gray-300">
        <%= simple_format reply.reply %>
      </div>
    </div>
  <% end %>
<% end %>
