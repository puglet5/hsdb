<%= simple_form_for([@discussion, @discussion.replies.build], remote: true) do |f| %>
  <%= f.text_area :reply, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "Leave a reply..."%>
  <div class="flex m-2 ml-0">
    <button type="submit" class="text-white bg-itmo_primary-500 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm p-1.5 text-center inline-flex items-center mr-2 px-4 dark:bg-itmo_primary-500 dark:hover:bg-itmo_primary-500 dark:focus:ring-blue-800">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </button>
    <%= link_to "Back", discussions_path, class: "block my-auto ml-2 text-sm font-medium text-gray-500 dark:text-gray-300 " %>
  </div>
<% end %>
