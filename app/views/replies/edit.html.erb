<% if reply_author(@reply) %>
  <h1 class="">Editing Reply</h1>
  <%= simple_form_for([@discussion, @reply]) do |f| %>
    <div class="">
      <div class="">
        <%= f.input :reply, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>
    <%= f.button :submit, 'Update reply', class:"" %>
  <% end %>
<% else %>
  <h1 class="">You can't edit others' replies</h1>
<% end %>
