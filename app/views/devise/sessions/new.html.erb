<div class="container flex justify-center">
  <div class="max-w-sm p-6 mb-auto bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 mt-14">
    <p class="mb-4 text-2xl font-bold dark:text-white">Log in</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <label for="input-group-1" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Your Email</label>
      <div class="relative mb-6">
        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
          <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder:"user@example.com" %>
      </div>
      <label for="website-admin" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Password</label>
      <div class="flex">
        <%= f.password_field :password, autocomplete: "current-password", class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "•••••••••" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center my-4">
          <%= f.check_box :remember_me, class: "w-4 h-4 bg-gray-100 border-gray-300 rounded text-primary-600 focus:ring-primary-500 dark:focus:ring-primary-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600", checked: true %>
          <label for="default-checkbox" class="block mb-0 ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Remember me</label>
        </div>
      <% end %>
      <div class="flex w-full">
        <%= f.submit "Log in", class: 'flex-grow px-5 mr-2 text-sm font-medium text-center text-white rounded-lg bg-primary-500 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-400 py-2.5 dark:bg-primary-500 dark:hover:bg-primary-500 dark:focus:ring-primary-800' %>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to t(".sign_up"), new_registration_path(resource_name), class: "px-5 text-sm font-medium text-center text-white bg-gray-500 rounded-lg hover:bg-gray-600 focus:ring-4 focus:outline-none focus:ring-primary-400 py-2.5 dark:bg-primary-500 dark:hover:bg-primary-500 dark:focus:ring-primary-800" %>
        <% end %>
      </div>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your passoword?", new_password_path(resource_name), class: "block mt-2 mb-2 text-sm font-medium text-gray-500 dark:text-gray-300" %>
      <% end %>
    <% end %>
  </div>
</div>
