<div class="container flex justify-center">
  <div class="p-6 mt-14 mb-auto w-full max-w-screen-sm bg-white rounded-md border border-gray-200 shadow-sm">
    <p class="mb-4 text-2xl font-bold">Create new account</p>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="grid grid-cols-2 gap-6">
        <div class="mb-6">
          <%= render Forms::LabelComponent.new(optional: false).with_content("First name") %>
          <%= f.input :first_name, autofocus: true, input_html: { class: "w-full p-4 pr-6 text-sm border-gray-300 rounded-md shadow-sm focus:ring-1 focus:ring-primary-600 focus:border-primary-600" }, placeholder: "John" %>
        </div>

        <div class="mb-6">
          <%= render Forms::LabelComponent.new(optional: false).with_content("Last name") %>
          <%= f.input :last_name, input_html: { class: "w-full p-4 pr-6 text-sm border-gray-300 rounded-md shadow-sm focus:ring-1 focus:ring-primary-600 focus:border-primary-600" }, placeholder: "Doe" %>
        </div>
      </div>

      <div class="mb-6">
        <%= render Forms::LabelComponent.new(optional: true).with_content("Organization") %>
        <%= f.input :organization, input_html: { class: "w-full p-4 pr-6 text-sm border-gray-300 rounded-md shadow-sm focus:ring-1 focus:ring-primary-600 focus:border-primary-600" }, placeholder: "ITMO University" %>
      </div>

      <%= render Forms::LabelComponent.new(optional: false).with_content("Email address") %>
      <div class="relative mb-6">
        <%= f.input :email, required: false, label: false, autofocus: false, input_html: { autocomplete: "email", class: "w-full p-4 pr-6 text-sm border-gray-300 rounded-md shadow-sm focus:ring-1 focus:ring-primary-600 focus:border-primary-600" }, placeholder: "Enter email" %>

        <span class="absolute inset-y-0 inline-flex items-center right-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
          </svg>
        </span>
      </div>

      <div class="mb-6">
        <%= render Forms::LabelComponent.new(optional: false).with_content("Password") %>
        <%= f.input :password, autocomplete: "new-password", input_html: { class: "w-full p-4 pr-6 text-sm border-gray-300 rounded-md shadow-sm focus:ring-1 focus:ring-primary-600 focus:border-primary-600      " }, placeholder: "•••••••••", validate: false %>
        <% if @minimum_password_length %>
          <%= render Forms::PHelperComponent.new().with_content("Must be #{@minimum_password_length} characters minimum") %>
        <% end %>
      </div>

      <div class="mb-6">
        <%= render Forms::LabelComponent.new(optional: false).with_content("Confirm password") %>
        <%= f.input :password_confirmation, autocomplete: "new-password", input_html: { class: "w-full p-4 pr-6 text-sm border-gray-300 rounded-md shadow-sm focus:ring-1 focus:ring-primary-600 focus:border-primary-600      " }, placeholder:"•••••••••", validate: false %>
      </div>

      <div class="flex actions">
        <%= f.submit "Sign up", class: "w-full px-5 text-sm font-medium text-center text-white rounded-md bg-primary-500 hover:bg-primary-800   focus:ring-primary-200 sm:w-auto py-2.5" %>
        <%= render Forms::BackButtonComponent.new(path: "login", cls: "hover:underline").with_content("Back to login") %>
      </form>
    </div>
  <% end %>
</div>
</div>
