<%= render "shared/errors", obj: @user %>
<%= render Sections::SectionComponent.new(cls: "text-gray-700") do %>
  <%= render Sections::DivContainerComponent.new(cls: "max-w-screen-lg") do %>
    <%= render Typography::H3Component.new(cls: "mb-8 text-center !text-4xl").with_content("Edit profile") %>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <%= f.hidden_field :avatar, value: f.object.avatar.signed_id if f.object.avatar.attached? %>
      <div class="grid grid-cols-12">
        <%= tag.div class: "relative col-span-3 row-span-2 mr-8", data: {controller: "avatar", "uppy": "user[avatar]", "avatar-target": "div"} do %>
          <span class="flex w-40 h-40 m-auto mb-4 rounded-full bg-primary-300">
            <div id="avatar">
              <% if resource.avatar.attached? %>
                <%= image_tag resource.avatar, class: "object-cover w-20 h-20 rounded-full md:w-40 md:h-40", data: {"avatar-target": "image"} %>
              <% end %>
            </div>
            <div class="">
              <label for="avatar-upload" class="absolute top-0 right-0 cursor-pointer" data-avatar-target="trigger">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                </svg>
              </label>
              <%= f.file_field :avatar, direct_upload: true, id: "avatar-upload", class: "hidden" %>
            </div>
          </span>
        <% end %>

        <div class="col-span-9 mb-4">
          <%= render Form::LabelComponent.new().with_content("First name") %>
          <%= render Form::TextInputComponent.new(form: f, field: :first_name, required: true) %>
        </div>

        <div class="col-span-9 mb-4">
          <%= render Form::LabelComponent.new().with_content("Last name") %>
          <%= render Form::TextInputComponent.new(form: f, field: :last_name, required: true) %>
        </div>

      </div>

      <div class="mb-4">
        <%= render Form::LabelComponent.new().with_content("Organization") %>
        <%= render Form::TextInputComponent.new(form: f, field: :organization, required: false, placeholder: "ITMO University") %>
      </div>

      <div class="mb-4">
        <%= render Form::LabelComponent.new().with_content("Email") %>
        <%= render Form::TextInputComponent.new(form: f, field: :email, required: true, placeholder: "test@example.com") %>
      </div>

      <br />
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </p>
      <% end %>
      <div class="mb-4">
        <%= render Form::LabelComponent.new().with_content("Password") %>

        <%= f.password_field :password, autocomplete: "new-password", type: "password", id: "password", class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg shadow-sm bg-gray-50 focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light", placeholder: "•••••••••" %>
        <p id="helper-text-explanation" class="mt-2 text-sm text-gray-500 dark:text-gray-400">Leave blank if you don't want to change it</p>
      </div>
      <div class="mb-4">
        <%= render Form::LabelComponent.new().with_content("Confirm password") %>

        <%= f.password_field :password_confirmation, autocomplete: "new-password", type: "password", id: "confirm-password", class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg shadow-sm bg-gray-50 focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light", placeholder: "•••••••••" %>
      </div>
      <div class="mb-4">
        <%= render Form::LabelComponent.new().with_content("Current password") %>

        <%= f.password_field :current_password, autocomplete: "current-password", type: "password", id: "confirm-password", class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg shadow-sm bg-gray-50 focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light", placeholder: "•••••••••" %>
        <p id="helper-text-explanation" class="mt-2 text-sm text-gray-500 dark:text-gray-400"> Your current password is needed to confirm the changes</p>
      </div>

      <div class="flex">
        <%= render Form::SubmitComponent.new(form: f).with_content("Update") %>
        <%= render Form::BackButtonComponent.new(path: "/#{locale}/users/#{current_user.slug}").with_content("Back") %>
      </div>
    <% end %>
  <% end %>
<% end %>
