<% if artworks&.count > 0 && query.result.count != 0 %>
  <div class="mt-8">
    <div class="space-y-8">
      <%= render artworks %>
    </div>
    <% if pagy.pages > 1 %>
      <div class="mt-8">
        <%== pagy_nav pagy %>
      </div>
    <% end %>
  </div>
<% elsif query.result.count == 0 && params[:query] %>
  <div class="relative p-8 text-center bg-white border border-gray-200 rounded-md">
    <h2 class="text-2xl font-medium">
      There's nothing here...
    </h2>
    <p class="mt-4 text-sm text-gray-500">
      The query returned no results
    </p>
  </div>
<% else %>
  <div class="relative p-8 text-center bg-white border border-gray-200 rounded-md">
    <h2 class="text-2xl font-medium">
      There's nothing here...
    </h2>
    <p class="mt-4 text-sm text-gray-500">
      New artworks will appear here
    </p>
  </div>
<% end %>
