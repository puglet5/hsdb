<div class="flex items-center">
  <div id="files-modal" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 flex items-center justify-center hidden w-full overflow-x-hidden overflow-y-auto bg-gray-500 bg-opacity-75 md:inset-0 h-modal md:h-full" data-modal-target="modal">
    <div class="relative max-w-screen-xl shadow-2xl h-2/3 md:h-auto">
      <!-- Modal content -->
      <div class="relative bg-white rounded-lg shadow ">
        <!-- Modal header -->
        <div class="flex items-center justify-between p-5 border-b rounded-t ">
          <div>
            <h3 class="text-xl font-medium text-gray-900 ">
              Attached files
            </h3>
            <p class="text-sm leading-relaxed text-gray-500 ">
              Click the document filename to download, click the cross icon to remove attachment
            </p>
          </div>
          <button type="button" class="inline-flex items-center ml-auto text-sm text-gray-400 bg-transparent rounded-lg hover:bg-gray-200 hover:text-gray-900 p-1.5  " data-modal-toggle="files-modal" data-action="click->modal#toggle">
            <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
            <span class="sr-only">Close modal</span>
          </button>
        </div>
        <div class="p-6 space-y-2 overflow-auto max-h-1/2">
          <ul class="ml-8 list-disc">
            <% @spectrum.files.each do |file| %>
              <% if file.persisted? %>

                <%= tag.div data: {controller: "attachment", "attachment-target": "attachment", "attachment-id-value": file.signed_id }, class: "m-2" do %>
                  <div class="flex">
                    <li>
                      <p class="text-base leading-relaxed text-gray-500 truncate ">
                        <%= link_to rails_blob_path(file, disposition: 'attachment') do %>
                          <%= file.filename.to_s %>
                        <% end %>
                      </p>
                    </li>
                    <%= link_to purge_attachment_spectrum_path(file.signed_id), data: {}, class: "my-auto", data: {action: "click->attachment#delete", turbo_method: :delete} do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    <% end %>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
