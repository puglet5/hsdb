<section class="pb-10 bg-gray-50 border">
  <div class="container mx-auto mt-10">
    <div class="p-4 bg-white rounded-lg border shadow-md sm:p-6">
      <div class="mb-8 lg:flex lg:justify-between lg:items-center">
        <div class="flex-1 min-w-0">
          <h2 class="text-5xl font-bold text-gray-900 sm:truncate">
            <%= @spectrum.title %>
          </h2>
          <div class="flex flex-col mt-1 sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">

            <div class="flex items-center mt-2 ml-1 text-sm text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="flex-shrink-0 mr-1.5 w-5 h-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9 2a2 2 0 00-2 2v8a2 2 0 002 2h6a2 2 0 002-2V6.414A2 2 0 0016.414 5L14 2.586A2 2 0 0012.586 2H9z" />
                <path d="M3 8a2 2 0 012-2v10h8a2 2 0 01-2 2H5a2 2 0 01-2-2V8z" />
              </svg>
              <%= @spectrum.files.count %> (<%= @spectrum.processed_csvs.count %> processed)
            </div>
            <div class="flex items-center mt-2 text-sm text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="flex-shrink-0 mr-1.5 w-5 h-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
              </svg>
              <%= link_to @spectrum.user, class:"font-medium" do %>
                <%= @spectrum.user&.full_name %>
              <% end %>
            </div>
            <div class="flex items-center mt-2 text-sm text-gray-500">
              <svg class="flex-shrink-0 mr-1.5 w-5 h-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
              </svg>
              <%= @spectrum.created_at.to_formatted_s(:long) %>
            </div>
          </div>
        </div>
        <div class="flex mt-5 lg:mt-0 lg:ml-4">
          <span class="hidden sm:block">
            <% if policy(@spectrum).update? %>
              <%= link_to [:edit, @spectrum], class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 w-4 h-4 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                </svg>
                Edit
              <% end %>
            <% end %>
          </span>
          <span class="hidden ml-3 sm:block">
            <% if policy(@spectrum).destroy? %>
              <%= link_to @spectrum, data: {turbo_method: :delete, turbo_confirm: "Delete this spectrum?" }, class: "inline-flex items-center px-4 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm py-2.5 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
            <% end %>
          </span>
        </div>
      </div>
      <!-- -->
      <div class="grid grid-cols-12 gap-x-8">
        <div id="files" class="col-span-8">
          <details class="transition ease-in-out delay-150 group" open>
            <summary class="flex justify-between my-4 border-b">
              <div class="flex">
                <svg class="my-auto w-6 h-6 group-open:rotate-180" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                <p class="block text-2xl font-medium text-gray-900 select-none">Spectra files</p>
              </div>
              <p class="mt-1 text-sm text-right text-gray-500" id="file_input_help">
                Files uploaded by user
              </p>
            </summary>
            <div class="ml-2">
              <% if @spectrum.files.any? %>
                <% @spectrum.files.each do |file| %>
                  <div class="flex">
                    <svg xmlns="http://www.w3.org/2000/svg" class="my-auto mr-2 w-4 h-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                    </svg>
                    <%= link_to file.filename, file.url %>
                  </div>
                <% end %>
              <% else %>
                <p class="mt-1 text-sm text-gray-500" id="file_input_help">
                  There's nothing here yet
                </p>
              <% end %>
            </div>
          </details>
          <details class="group" open>
            <summary class="flex justify-between my-4 border-b">
              <div class="flex">
                <svg class="my-auto w-6 h-6 group-open:rotate-180" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                <p class="block mr-4 text-2xl font-medium text-gray-900 select-none">Processed files</p>
              </div>
              <p class="mt-1 text-sm text-right text-gray-500" id="file_input_help">
                Automatically processed .csv files (click to preview)
              </p>
            </summary>
            <div class="ml-2">
              <div class="my-4">
                <div class="flex p-4 mb-4 text-sm text-gray-700 bg-gray-100 rounded-lg" role="alert">
                  <svg aria-hidden="true" class="inline flex-shrink-0 mr-3 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
                  <span class="sr-only">Info</span>
                  <div class="text-gray-500">
                    <span class="font-medium text-gray-900">Info! </span>
                    Processing might take a long time and only occurs for specific file types. Please refer to the documentation.
                    <p class="mt-1 font-medium text-gray-900">
                      Last processing: <%= @spectrum.processing_status %>
                    </p>
                  </div>
                </div>
                <div class="flex items-center mt-2 ml-1 text-sm text-gray-500">

                </div>
                <% if @spectrum.processed_csvs.any? %>
                  <% @spectrum.processed_csvs.each do |csv| %>
                    <div class="flex">
                      <svg xmlns="http://www.w3.org/2000/svg" class="my-auto mr-2 w-4 h-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                      <%= link_to csv.filename, csv.url %>
                    </div>
                  <% end %>
                <% else %>
                  <p class="mt-1 text-sm text-gray-500" id="file_input_help">
                    There's nothing here yet
                  </p>
                <% end %>
              </div>
            </div>
          </details>
        </div>
        <div id="metadata" class="col-span-4 my-4 mx-auto w-full">
          <div class="flex border-b">
            <p class="block mr-4 text-2xl font-medium text-gray-900 select-none">Metadata</p>
            <p class="mt-1 text-sm text-right text-gray-500" id="file_input_help">
            </p>
          </div>
          <pre class="overflow-hidden">
            <%= ap @spectrum.metadata %>
          </pre>
        </div>
      </div>
    </div>
  </div>
</section>
