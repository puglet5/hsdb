<section class="bg-gray-50 border">
  <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16 lg:px-12">
    <div class="flex justify-between mb-4">
      <h3 class="my-auto text-4xl font-bold tracking-tight leading-none text-center text-gray-900">HSDB Users</h3>
      <span class="flex my-auto text-gray-500">
        <p class="mr-2 text-sm leading-relaxed text-gray-500">
          Download user data
        </p>
        <%= link_to admin_users_path(format: :zip), class: "" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
        <% end %>
      </span>
    </div>
    <div class="overflow-x-auto relative rounded-lg border">
      <table class="w-full text-sm text-left text-gray-500">
        <thead>
          <tr>
            <th scope="col" class="py-3 pl-6">#</th>
            <th scope="col" class="py-3 px-6">Name</th>
            <th scope="col" class="py-3 px-6">Organization</th>
            <th scope="col" class="py-3 px-6">Roles</th>
            <th scope="col" class="py-3 px-6">Created at</th>
            <th scope="col" class="py-3 px-6">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white border-b">
          <%= render @users %>
        </tbody>
      </table>
    </div>
  </div>
</section>
