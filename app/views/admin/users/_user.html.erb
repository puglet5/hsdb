<tr class="border-b hover:bg-gray-200">
  <td class="py-4 pl-6">
    <%= user.id %>
  </td>
  <th class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap">
    <%= link_to user, class: "link" do %>
      <%= user&.full_name %>
      <p class="font-normal text-gray-500">
        <%= user.email %>
      </p>
    <% end %>
  </th>
  <td class="py-4 px-6">
    <%= user.organization %>
  </td>
  <td class="py-4 px-6">
    <% user.roles.all.each do |role| %>
      <%= role.name %>
    <% end %>
  </td>
  <td class="py-4 px-6">
    <%= time_ago_in_words(user.created_at) %> ago</td>
  <td class="py-4 px-6">
    <%= link_to [:admin, user], data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
      <span class="flex my-auto mb-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="my-auto mx-1 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
        <p>
          Delete
        </p>
      </span>
    <% end %>
    <%= link_to [:admin, :edit, user] do %>
      <span class="flex my-auto">
        <svg xmlns="http://www.w3.org/2000/svg" class="my-auto mx-1 w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
        Edit
      </span>
    <% end %>
  </td>
</tr>
