<section class="border bg-gray-50 dark:bg-gray-900">
  <div class="container mx-auto mt-10 ">
    <div class="flex flex-col">
      <h1 class="mb-2 text-4xl font-bold leading-none tracking-tight text-center text-gray-900">Forum</h1>
      <%= tag.div class: "flex justify-center mb-14", data: {controller: '', "category-loading-class": "disabled", "category-id-value": @category.id}  do %>
        <%= tag.h1 @category.category_name, class: "text-2xl font-medium leading-none tracking-tight text-center text-gray-700", data: {"category-target": "title"} %>
      <% end %>
    </div>
    <%# if policy(@category).update? %>
    <%#= link_to edit_category_path(@category) do
        "a"
      end %>
    <%# end %>
    <%= render "shared/discussions" %>
  </div>
</section>
