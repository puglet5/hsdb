<%= simple_form_for @discussion , defaults: { required: false } do |f| %>
  <div class="grid grid-cols-12 mb-4">
    <div class="col-span-10">
      <label for="title" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Title</label>
      <%= f.input :title, input_html: {class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "Discussion title"}, label: false, hint: false %>
    </div>
    <div class="col-span-2 ml-6">
      <label for="category_id" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400">Category</label>
      <%= f.input :category_id, collection: @categories.map { |c| [c.category_name, c.id] }, input_html: {class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"}, label: false, hint: false, include_blank: false %>
    </div>
  </div>
  <div class="mb-4">
    <label for="content" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Content</label>
    <%= f.input :content, as: :rich_text_area, input_html: { class: "textarea" }, label: false, hint: false, placeholder: "Discussion content" %>
  </div>
  <div class="flex">
    <button type="submit" class="w-full px-5 text-sm font-medium text-center text-white rounded-lg bg-primary-500 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-200 sm:w-auto py-2.5 dark:bg-primary-500 dark:hover:bg-primary-500 dark:focus:ring-primary-800">
      <%= f.submit %>
    </button>
    <%= link_to "Back", discussions_path, class: "block my-auto ml-4 text-sm font-medium text-gray-500 dark:text-gray-300 " %>
  </div>
<% end %>
