<%= simple_form_for @discussion do |f| %>
  <%= f.error_notification %>
      <%= f.input :title, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
      <%= f.rich_text_area :content, required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" } %>

      <%= f.select :category_id, Category.all.collect { |p| p.id }, include_blank: true %>

      <%= f.button :submit, class: "" %>
      <%= Category.all.collect { |p| p.id } %>
<% end %>
