<section class="bg-gray-50 dark:bg-gray-900 border">
  <div class="container mx-auto mt-20">
    <div class="grid grid-cols-12 gap-8">
      <div class="col-span-8">
        <div class="flex justify-between">
          <h1 class="mb-4 text-2xl font-extrabold tracking-tight leading-none text-gray-900">Latest Discussions</h1>
          <%= link_to new_discussion_path, class: "mr-6" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
            </svg>
          <% end %>
        </div>
        <%= render "shared/discussions" %>
      </div>
      <div class="col-span-4">
        <%= render "sidebar" %>
      </div>
    </div>
  </div>
</section>
