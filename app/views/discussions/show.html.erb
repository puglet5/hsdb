<section class="pb-10 border bg-gray-50 ">
  <div class="container mx-auto mt-10">
    <div class="p-4 bg-white border rounded-lg shadow-md sm:p-6  ">
      <div class="lg:flex lg:items-center lg:justify-between">
        <div class="flex-1 min-w-0">
          <h2 class="text-5xl font-bold text-gray-900 sm:truncate"><%= @discussion.title %></h2>
          <div class="flex flex-col mt-1 sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
            <div class="flex items-center mt-2 ml-1 text-sm text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="flex-shrink-0 w-5 h-5 text-gray-400 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 13V5a2 2 0 00-2-2H4a2 2 0 00-2 2v8a2 2 0 002 2h3l3 3 3-3h3a2 2 0 002-2zM5 7a1 1 0 011-1h8a1 1 0 110 2H6a1 1 0 01-1-1zm1 3a1 1 0 100 2h3a1 1 0 100-2H6z" clip-rule="evenodd" />
              </svg>
              <%= link_to @discussion.category, class:"font-medium" do %>
                <%= @discussion.category.category_name %>
              <% end %>
            </div>
            <div class="flex items-center mt-2 text-sm text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="flex-shrink-0 w-5 h-5 text-gray-400 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.707 3.293a1 1 0 010 1.414L5.414 7H11a7 7 0 017 7v2a1 1 0 11-2 0v-2a5 5 0 00-5-5H5.414l2.293 2.293a1 1 0 11-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <%= @discussion.replies.count %>
              <% if  @discussion.replies.count >= 2 || @discussion.replies.count == 0 %>
                replies
              <% else %>
                reply
              <% end %>
            </div>
            <div class="flex items-center mt-2 text-sm text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="flex-shrink-0 w-5 h-5 text-gray-400 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
              </svg>
              <%= link_to @discussion.user, class:"font-medium" do %>
                <%= full_name(@discussion.user) %>
              <% end %>
            </div>
            <div class="flex items-center mt-2 text-sm text-gray-500">
              <svg class="flex-shrink-0 w-5 h-5 text-gray-400 mr-1.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
              </svg>
              <%= @discussion.created_at.to_formatted_s(:long) %>
            </div>
          </div>
        </div>
        <div class="flex mt-5 lg:mt-0 lg:ml-4">
          <span class="hidden sm:block">
            <% if policy(@discussion).update? %>
              <%= link_to edit_discussion_path(@discussion), class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                </svg>
                Edit
              <% end %>
            <% end %>
          </span>
          <span class="hidden ml-3 sm:block">
            <% if policy(@discussion).destroy? %>
              <%= link_to discussion_path(@discussion), data: {turbo_method: :delete, turbo_confirm: "Delete this discussion?" }, class: "inline-flex items-center px-4 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm py-2.5 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
            <% end %>
          </span>
        </div>
      </div>
      <div class="p-4 my-4 bg-white border border-gray-200 rounded-lg shadow-sm  ">
        <%= @discussion.content %>
      </div>
      <label class="block mb-4 font-medium text-gray-900 border-b text-m ">Actions and replies</label>
      <ol class="relative border-l border-gray-200 ">
        <li class="mb-10 ml-6">
          <% if @discussion.replies.count > 0 %>
            <%= render @discussion.replies.includes([:user]).order("created_at asc") %>
          <% else %>
            <p class="text-sm text-gray-500">
              There's nothing here yet
            </p>
          <% end %>
        </li>
      </ol>
      <%= render "replies/form" %>
    </div>
  </div>
</section>
